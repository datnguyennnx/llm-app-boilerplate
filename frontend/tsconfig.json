{
    "compilerOptions": {
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": ["./src/*"],
            "@/components/*": ["./src/_components/*"],
            "@/lib/*": ["./src/_lib/*"],
            "@/hooks/*": ["./src/_lib/hooks/*"],
            "@/context/*": ["./src/_lib/context/*"],
            "@/types/*": ["./src/_lib/types/*"],
            "@/utils/*": ["./src/_lib/utils/*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "svgr.d.ts"],
    "exclude": ["node_modules"]
}
